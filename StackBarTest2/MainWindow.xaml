        <local:StackBarParentItemControl DataContext="{Binding TestFloor}"
                                         Legend="{Binding DataContext.LegendDictionary, RelativeSource={RelativeSource AncestorType=Window}}"
                                         ItemsSource="{Binding Rooms}"
                                         UnitValueField="Area"
                                         BarValueField="Area"
                                         BorderBrush="Black"
                                         BorderThickness="0"
                                         MaxHeight="100">
            <local:StackBarParentItemControl.UnitTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Height="100">
                        <StackPanel.Background>
                            <SolidColorBrush>
                                <SolidColorBrush.Color>
                                    <MultiBinding Converter="{StaticResource LegendConverter}">
                                        <Binding Path="Legend" RelativeSource="{RelativeSource AncestorType=local:StackBarParentItemControl}" />
                                        <Binding Path="Type" />
                                    </MultiBinding>
                                </SolidColorBrush.Color>
                            </SolidColorBrush>
                        </StackPanel.Background>
                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding Type}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding Area}" TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </local:StackBarParentItemControl.UnitTemplate>
