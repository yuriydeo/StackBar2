<Window x:Class="StackBarTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackBarTest2"
        xmlns:converters="clr-namespace:StackBarTest2.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converters:LegendValueColorConverter x:Key="LegendConverter"/>
    </Window.Resources>
    <Grid>
        <local:StackBarControl ItemsSource="{Binding Floors}"
                               UnitValueField="Area"
                               BarItemsSourceField="Rooms"
                               MinUnitWidth="0"
                               BarHeight="100">

            <local:StackBarControl.HeaderTemplate>
                <DataTemplate DataType="local:Floor">
                    <Border BorderThickness="1" Margin="0" Padding="0" Width="50" Height="100">
                        <StackPanel Orientation="Vertical" Background="Beige">
                            <TextBlock Text="{Binding Name}" TextWrapping="Wrap" />
                            <TextBlock Text="{Binding Area}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </local:StackBarControl.HeaderTemplate>

            <local:StackBarControl.UnitTemplate>
                <DataTemplate DataType="local:Room">
                    <Border BorderThickness="1" Padding="0" Margin="0">
                        <StackPanel Orientation="Vertical" Height="100">
                            <StackPanel.Background>
                                <SolidColorBrush>
                                    <SolidColorBrush.Color>
                                        <MultiBinding Converter="{StaticResource LegendConverter}">
                                            <Binding Path="DataContext.LegendDictionary" RelativeSource="{RelativeSource AncestorType=Window}" />
                                            <Binding Path="Type" />
                                        </MultiBinding>
                                    </SolidColorBrush.Color>
                                </SolidColorBrush>
                            </StackPanel.Background>
                            <TextBlock Text="{Binding Name}" TextWrapping="Wrap" />
                            <TextBlock Text="{Binding Type}" TextWrapping="Wrap" />
                            <TextBlock Text="{Binding Area}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </local:StackBarControl.UnitTemplate>
        </local:StackBarControl>
    </Grid>
</Window>
