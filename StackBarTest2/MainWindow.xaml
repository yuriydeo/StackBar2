<Window x:Class="StackBarTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackBarTest2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:LegendValueColorConverter x:Key="LegendConverter"/>
    </Window.Resources>
    <Grid>
        <local:StackBarParentItemControl Legend="{Binding LegendDictionary}"
                                         ItemsSource="{Binding TestFloor.Rooms}"
                                         UnitValueField="Area"
                                         BarValueField="Area"
                                         BorderBrush="Black"
                                         BorderThickness="0"
                                         MaxHeight="100">
            <local:StackBarParentItemControl.UnitTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Height="100" TextWrapping="Wrap" >
                        <TextBlock.Background>
                            <SolidColorBrush>
                                <SolidColorBrush.Color>
                                    <MultiBinding Converter="{StaticResource LegendConverter}">
                                        <Binding Path="Legend" RelativeSource="{RelativeSource AncestorType=local:StackBarParentItemControl}" />
                                        <Binding Path="Type" />
                                    </MultiBinding>
                                </SolidColorBrush.Color>
                            </SolidColorBrush>
                        </TextBlock.Background>
                    </TextBlock>
                </DataTemplate>
            </local:StackBarParentItemControl.UnitTemplate>
        </local:StackBarParentItemControl>
    </Grid>
</Window>
